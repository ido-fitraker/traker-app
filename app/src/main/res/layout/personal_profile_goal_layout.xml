<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/outsideGymLayoutBackground">

            <ImageView
                android:id="@+id/personal_profile_goal_layout_goal_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/personal_profile_goal_layout_progress_scale"
                 />

            <TextView
                android:id="@+id/personal_profile_goal_layout_goal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/personal_profile_goal_layout_progress_scale"
                app:layout_constraintStart_toEndOf="@+id/personal_profile_goal_layout_goal_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personal_profile_goal_layout_goal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75 kg"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/personal_profile_goal_layout_goal_name"
                app:layout_constraintStart_toEndOf="@id/personal_profile_goal_layout_goal_name" />

    <ImageView
        android:id="@+id/personal_profile_goal_layout_goal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/personal_profile_goal_layout_goal_icon"
        app:layout_constraintEnd_toStartOf="@+id/personal_profile_goal_layout_goal_text"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personal_profile_goal_layout_goal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/personal_profile_goal_layout_goal_text"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/personal_profile_goal_layout_goal_text_value"
                app:layout_constraintBottom_toTopOf="@id/personal_profile_goal_layout_progress_scale"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="17dp" />

            <TextView
                android:id="@+id/personal_profile_goal_layout_goal_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="80 kg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/personal_profile_goal_layout_progress_scale"
                android:textColor="@color/colorWhite"
                tools:layout_editor_absoluteX="340dp" />


            <ImageView
                android:id="@+id/personal_profile_goal_layout_progress_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
               />

    </android.support.constraint.ConstraintLayout>