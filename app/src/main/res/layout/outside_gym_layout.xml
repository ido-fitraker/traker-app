<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:stretchColumns="1,0"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.traker.traker.components.MainTopBar
            android:id="@+id/outside_gym_layout_main_top_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/outside_gym_layout_dynamic_table_row"
        >

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.traker.traker.components.MainBottomBar
            android:id="@+id/outside_gym_layout_main_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </TableRow>
</TableLayout>