<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/colorBlack"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/traker_personal_trainer_layout_trainer_image"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/coach_image_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/traker_personal_trainer_layout_trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="blah"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/traker_personal_trainer_layout_trainer_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/traker_personal_trainer_layout_trainer_practical_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="8dp"
        android:text="blah"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/traker_personal_trainer_layout_trainer_image" />

    <LinearLayout
        android:id="@+id/traker_personal_trainer_layout_trainer_rating_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:baselineAligned="false"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@+id/traker_personal_trainer_layout_trainer_choose_button"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:padding="3dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/traker_personal_trainer_layout_trainer_choose_button"
        android:layout_width="16dp"
        android:layout_height="32dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:src="@drawable/back_screen_button_arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/traker_personal_trainer_layout_trainer_rating_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/traker_personal_trainer_layout_trainer_rating_layout"
        app:layout_constraintVertical_bias="0.461" />

</android.support.constraint.ConstraintLayout>