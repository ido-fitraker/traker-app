<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/workout_layout_root_view">

    <LinearLayout
        android:id="@+id/workout_layout_muscles_group_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.traker.traker.components.TrakerLinearLayout
            android:id="@+id/workout_layout_muscles_group_layout_a_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/wokrout_layout_muscles_group_layout_a_group_letter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/front_hand_image" />

            <ImageView
                android:id="@+id/workout_layout_muscles_group_layout_a_group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chest_image" />
        </com.traker.traker.components.TrakerLinearLayout>

        <com.traker.traker.components.TrakerLinearLayout
            android:id="@+id/workout_layout_muscles_group_layout_b_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/wokrout_layout_muscles_group_layout_b_group_letter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_hand_image" />

            <ImageView
                android:id="@+id/workout_layout_muscles_group_layout_b_group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_image" />
        </com.traker.traker.components.TrakerLinearLayout>

        <com.traker.traker.components.TrakerLinearLayout
            android:id="@+id/workout_layout_muscles_group_layout_c_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/wokrout_layout_muscles_group_layout_c_group_letter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoulders_image" />

            <ImageView
                android:id="@+id/workout_layout_muscles_group_layout_c_group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feet_image" />
        </com.traker.traker.components.TrakerLinearLayout>
    </LinearLayout>

    <com.traker.traker.components.TrakerLinearLayout
        android:id="@+id/workout_layout_new_training_session_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/workout_layout_workout_function_buttons_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_layout_muscles_group_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTraker"
            android:clickable="false"
            android:padding="5dp"
            android:text="@string/workout_layout_start_new_training_session_button_Text"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="5dp"
            android:src="@drawable/workout_layout_new_training_session_icon"
            app:civ_border_color="@color/colorTraker"
            app:civ_border_overlay="false"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorWhite" />
    </com.traker.traker.components.TrakerLinearLayout>

    <com.traker.traker.components.WorkoutFunctionButtonLayout
        android:id="@+id/workout_layout_workout_function_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.traker.traker.components.WorkoutFunctionButtonLayout>
</android.support.constraint.ConstraintLayout>