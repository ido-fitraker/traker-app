<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF212121"
    android:id="@+id/personal_profile_layout_root_view"
    android:orientation="vertical">

    <com.traker.traker.components.TrakerLinearLayout
        android:id="@+id/personal_profile_layout_personal_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_profile_layout_personal_details_layout_profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/yoni_geva_the_man_sample_user_image" />

        <com.traker.traker.components.TrakerLinearLayout
            android:id="@+id/personal_profile_layout_personal_details_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.traker.traker.components.TrakerLinearLayout
                android:id="@+id/personal_profile_layout_personal_details_layout_content_border_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_profile_layout_border">

                <TextView
                    android:id="@+id/personal_profile_layout_personal_details_layout_content_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    tools:text="yoni geva" />

                <TextView
                    android:id="@+id/personal_profile_layout_personal_details_layout_content_profile_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    tools:text="53 followers" />
            </com.traker.traker.components.TrakerLinearLayout>

            <com.traker.traker.components.TrakerLinearLayout
                android:id="@+id/personal_profile_layout_personal_details_layout_content_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.traker.traker.components.TrakerLinearLayout
                    android:id="@+id/personal_profile_layout_personal_details_layout_content_content_all_bmi_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.traker.traker.components.TrakerLinearLayout
                        android:id="@+id/personal_profile_layout_personal_details_layout_content_content_current_bmi_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_current_bmi_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_profile_layout_current_bmi_text" />

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_current_bmi_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="24.5" />
                    </com.traker.traker.components.TrakerLinearLayout>

                    <com.traker.traker.components.TrakerLinearLayout
                        android:id="@+id/personal_profile_layout_personal_details_layout_content_content_initial_bmi_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_initial_bmi_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_profile_layout_initial_bmi_text" />

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_initial_bmi_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="27.1" />
                    </com.traker.traker.components.TrakerLinearLayout>

                </com.traker.traker.components.TrakerLinearLayout>

                <ImageView
                    android:id="@+id/personal_profile_layout_personal_details_layout_content_content_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/personal_profile_personal_details_icon" />

                <com.traker.traker.components.TrakerLinearLayout
                    android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.traker.traker.components.TrakerLinearLayout
                        android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout_height_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout_height_layout_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_profile_layout_height_text" />

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout_height_layout_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="1.75" />
                    </com.traker.traker.components.TrakerLinearLayout>

                    <com.traker.traker.components.TrakerLinearLayout
                        android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout_initial_weight_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout_initial_weight_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_profile_layout_initial_weight_text" />

                        <TextView
                            android:id="@+id/personal_profile_layout_personal_details_layout_content_content_personal_measurements_layout_initial_weight_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="85" />
                    </com.traker.traker.components.TrakerLinearLayout>
                </com.traker.traker.components.TrakerLinearLayout>
            </com.traker.traker.components.TrakerLinearLayout>
        </com.traker.traker.components.TrakerLinearLayout>
    </com.traker.traker.components.TrakerLinearLayout>

    <com.traker.traker.components.PersonalProfileGoalLayout
        android:id="@+id/personal_profile_layout_current_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </com.traker.traker.components.PersonalProfileGoalLayout>

    <com.traker.traker.components.PersonalProfileGoalLayout
        android:id="@+id/personal_profile_layout_current_fat_percentage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </com.traker.traker.components.PersonalProfileGoalLayout>

    <com.traker.traker.components.PersonalProfileGoalLayout
        android:id="@+id/personal_profile_layout_weekly_training_average_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </com.traker.traker.components.PersonalProfileGoalLayout>

    <com.traker.traker.components.PersonalProfileGoalLayout
        android:id="@+id/personal_profile_layout_trainings_completed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    </com.traker.traker.components.PersonalProfileGoalLayout>

</LinearLayout>