<?xml version="1.0" encoding="utf-8"?>
<com.traker.traker.components.TrakerLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/workout_layout_function_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
       >

    <com.traker.traker.components.TrakerLinearLayout
        android:id="@+id/wokrout_layout_function_buttons_layout_leader_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/workout_layout_function_buttons_layout_leader_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/workout_function_buttons_layout_leaders_list_icon" />

        <TextView
            android:id="@+id/workout_layout_function_buttons_layout_leader_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_layout_function_buttons_leader_list_text" />
    </com.traker.traker.components.TrakerLinearLayout>

    <com.traker.traker.components.TrakerLinearLayout
        android:id="@+id/wokrout_layout_function_buttons_layout_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/workout_layout_function_buttons_layout_challenges_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/workout_function_buttons_layout_challenges_icon" />

        <TextView
            android:id="@+id/workout_layout_function_buttons_layout_challenges_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_layout_function_buttons_challenges_text" />
    </com.traker.traker.components.TrakerLinearLayout>

    <com.traker.traker.components.TrakerLinearLayout
        android:id="@+id/workout_layout_function_buttons_layout_training_session_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/workout_layout_function_buttons_layout_training_session_history_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/workout_function_buttons_layout_training_session_history_icon" />

        <TextView
            android:id="@+id/workout_layout_function_buttons_layout_training_session_history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_layout_function_buttons_training_session_history_text" />
    </com.traker.traker.components.TrakerLinearLayout>

    <com.traker.traker.components.TrakerLinearLayout
        android:id="@+id/workout_layout_function_buttons_layout_class_explorer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/workout_layout_function_buttons_layout_class_explorer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/workout_function_buttons_layout_class_explorer_icon" />

        <TextView
            android:id="@+id/workout_layout_function_buttons_layout_class_explorer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_layout_function_buttons_class_explorer_text" />
    </com.traker.traker.components.TrakerLinearLayout>
</com.traker.traker.components.TrakerLinearLayout>